{
  "name": "cookie-though",
  "version": "2.0.0",
  "license": "MIT",
  "homepage": "https://cookiethough.dev",
  "source": "src/lib.ts",
  "module": "dist/lib.js",
  "types": "dist/types/lib.d.ts",
  "targets": {
    "module": {
      "includeNodeModules": [
        "preact"
      ],
      "optimize": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inthepocket/cookie-though"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cookies",
    "cookie",
    "cookie preferences",
    "browser",
    "universal"
  ],
  "scripts": {
    "dev": "parcel src/www/index.html",
    "build": "parcel build --no-source-maps --reporter @parcel/reporter-bundle-analyzer",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "lint:style": "stylelint src/**/*.{css,scss,sass} --fix",
    "prepare": "./scripts/postinstall-local.sh",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage"
  },
  "author": "",
  "devDependencies": {
    "@parcel/config-default": "^2.0.1",
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/reporter-bundle-analyzer": "^2.0.1",
    "@parcel/transformer-inline-string": "^2.0.1",
    "@parcel/transformer-typescript-tsc": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/preact": "^2.0.1",
    "@testing-library/preact-hooks": "^1.1.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "jest-matchmedia-mock": "^1.1.0",
    "parcel": "^2.0.1",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "preact": "^10.5.15"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:import/typescript",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": "**/coverage/**/*",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "import",
      "jsx-a11y"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/**/*.{ts,tsx,js}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/@types/",
      "<rootDir>/coverage/",
      "<rootDir>/jest",
      "<rootDir>/www/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "moduleNameMapper": {
      "bundle-text:*": "<rootDir>/jest/bundle-text.ts"
    },
    "preset": "ts-jest",
    "rootDir": "src",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/jest.setup.ts"
    ],
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-idiomatic-order"
    ]
  }
}
